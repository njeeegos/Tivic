@model IEnumerable<TiViC_proba.Models.WatchLater>
@{
    ViewData["Title"] = "WatchLater";
}

<h1>Watch later list:</h1>


@if (Model.Count() > 0)
{
    <div>
        <table class="table table-bordered">
            <tr class="table-success">
                <th>
                    Naziv
                </th>
                <th>
                    Datum
                </th>
                <th>
                    Vreme
                </th>
                <th>
                    Tip
                </th>
                <th>
                    Opis
                </th>
                <th>
                    
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.naziv
                    </td>
                    <td>
                        @item.datum
                    </td>
                    <td>
                        @item.vreme
                    </td>
                    <td>
                        @item.tip
                    </td>
                    <td>
                        @item.opis
                    </td>
                    <td>
                        @Html.ActionLink("Odgledao/la", "ObrisiIzWatchLater", "Home", new { userId = item.userId, kanalId = item.kanalId, datum = item.datum, vreme = item.vreme, naziv = item.naziv, opis = item.opis, tip = item.tip })
                    </td>
                </tr>
            }
        </table>
    </div>
}

